#include <stdlib.h>
#include "../includes/libmy.h"
#include "../includes/ftl.h"
#include "../includes/sdl_headers.h"

int		handle_event(SDL_Surface *ecran, SDL_Surface *background, SDL_Event event, t_button *start_button, unsigned int display_button)
{
  SDL_Surface   *fond;

  if (display_button == 0)
    {
      if (blit_button(ecran, start_button, event) != 0)
	return (1);
      SDL_BlitSurface(start_button->display, NULL, ecran, &(start_button->position));
    }
  else if (display_button == 1)
    {
      SDL_BlitSurface(background, NULL, ecran, NULL);
      fond = IMG_Load("assets/img/FTL_ship.png");
      SDL_BlitSurface(fond, NULL, ecran, NULL);
      SDL_FreeSurface(fond);
    }
  SDL_Flip(ecran);
  return (0);
}

