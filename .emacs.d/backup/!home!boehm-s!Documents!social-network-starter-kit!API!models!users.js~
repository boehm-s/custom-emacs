import db from '../../config/orientdb';

const Users = {
    getAll() {
	return new Promise((resolve, reject) => {
	    db.command("SELECT FROM users", (err, posts) => {
		if (err)
		    return reject(err);
		return resolve(posts);
	    });
	});
    },

    register(userObj) {
	return new Promise((resolve, reject) => {
	    db.createVertex(userObj, {"class": "Users"}, err => {
		if (err)
		    return reject(err);
		return resolve({});
	    });
	});
    }
};

export default Users;
