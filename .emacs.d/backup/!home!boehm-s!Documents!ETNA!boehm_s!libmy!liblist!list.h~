#ifndef _LIST_H_
#define _LIST_H_

typedef struct		s_node
{
  int			id;
  void			*data;
  struct s_node		*prev;
  struct s_node		*next;
} t_node;


typedef struct		s_list {
  size_t		length;
  t_node		*head;
  t_node		*tail;
  void			(*free_fn)(void *);
} t_list;


t_list			*list_new();
void			list_destroy(t_list *list);

t_node			*list_append(t_list *list, t_node *node);
t_node			*list_prepend(t_list *list, t_node *node);
int			list_size(t_list *list);

void			list_head(t_list *list, void *element, unsigned int remove_from_list);
void			list_tail(t_list *list, void *element);

#endif /* !_LIST_H_ */
